<Window x:Class="SnakeWPF.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SnakeWPF.View"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Window.InputBindings>
        <KeyBinding Command="{Binding TurnSnakeCommand}" CommandParameter="Left" Key="Left"/>
        <KeyBinding Command="{Binding TurnSnakeCommand}" CommandParameter="Right" Key="Right"/>
    </Window.InputBindings>
    
    <DockPanel>
        <Menu DockPanel.Dock="Top" Height="20">
            <MenuItem Header="Szint választás">
                <MenuItem Command="{Binding NewGameCommand}" 
                          CommandParameter="{Binding Header, RelativeSource={RelativeSource Self}}" 
                          Header="15 x 15 pálya"/>
                <MenuItem Command="{Binding NewGameCommand}" 
                          CommandParameter="{Binding Header, RelativeSource={RelativeSource Self}}"
                          Header="20 x 20 pálya"/>
                <MenuItem Command="{Binding NewGameCommand}"
                          CommandParameter="{Binding Header, RelativeSource={RelativeSource Self}}"
                          Header="25 x 25 pálya"/>
            </MenuItem>
            <MenuItem Header="{Binding PausedText}" Command="{Binding PauseGameCommand}"/>
        </Menu>

        <StatusBar DockPanel.Dock="Bottom" Height="20">
            <TextBlock Text="Eltelt idő: "/>
            <TextBlock Text="{Binding Seconds, Mode=OneWay}"/>
            <TextBlock Text="Tojások száma: "/>
            <TextBlock Text="{Binding EggCount, Mode=OneWay}"/>
        </StatusBar>

        <ItemsControl ItemsSource="{Binding Table, Mode=OneWay}" Width="360" Height="360" HorizontalAlignment="Center">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="{Binding DataContext.TableSize, RelativeSource={RelativeSource AncestorType=Window}}"
                                 Rows="{Binding DataContext.TableSize, RelativeSource={RelativeSource AncestorType=Window}}"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Button>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Beige"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsWall}" Value="True">
                                        <Setter Property="Background" Value="Chocolate"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding IsSnake}" Value="True">
                                        <Setter Property="Background" Value="ForestGreen"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding IsEgg}" Value="True">
                                        <Setter Property="Background" Value="BlueViolet"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </DockPanel>
</Window>
